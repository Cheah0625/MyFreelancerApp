<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/browse_jobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="18dp"
                android:layout_marginLeft="12dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:text="@string/BuyerAcc_postProject_Title"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/browse_jobCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:lineSpacingExtra="3dp"
                android:layout_alignParentTop="true"
                android:textSize="12dp"
                android:text="@string/BuyerAcc_postProject_CategoryTitle" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/budget_large" />


                <TextView
                    android:id="@+id/browse_jobPrice"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/red"
                    android:textSize="14dp"
                    android:textAlignment="textStart"
                    android:text="@string/SellerViewJobDetail_JobPriceUnit" />

            </LinearLayout>

        </RelativeLayout>

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/browse_jobDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:fontFamily="@font/roboto"
            android:text="@string/BuyerAcc_postProject_Desc"
            android:lineSpacingExtra="3dp"
            app:trimExpandedText="@string/show_less"
            app:trimCollapsedText="@string/show_more"
            android:textColor="@color/black"
            app:trimMode="trimModeLength"
            android:paddingStart="16dp"
            android:paddingEnd="18dp"
            app:trimLength="60"
            app:colorClickableText="@color/blue"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/light_grey2"
            android:backgroundTintMode="src_atop"/>

    </LinearLayout>


</RelativeLayout>