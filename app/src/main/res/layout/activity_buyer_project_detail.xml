<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuyerProjectDetail">

    <LinearLayout
        android:id="@+id/linearLayoutDetailProHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue2">

        <ImageButton
            android:id="@+id/backToPostingList"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:backgroundTint="@color/dark_blue2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BuyerProjectDetail_PageTitle"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="18dp" />

    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="55dp"
        android:outlineAmbientShadowColor="@color/grey"
        android:outlineSpotShadowColor="@color/grey"
        android:background="@color/light_grey3" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true"
        android:layout_below="@+id/linearLayoutDetailProHistory"
        android:layout_above="@id/linearProBtnBoth"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="17dp">

            <TextView
                android:id="@+id/projectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="@string/BuyerProjectDetail_ProjectTitle"/>

            <TextView
                android:id="@+id/projectDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="3dp"
                android:textSize="14dp"
                android:text="@string/BuyerProjectDetail_ProjectDesc"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/category_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginLeft="13dp"
                        android:lineSpacingExtra="3dp"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:text="@string/BuyerAcc_postProject_CategoryTitle" />

                </LinearLayout>

                <TextView
                    android:id="@+id/PDetail_Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="53dp"
                    android:layout_marginLeft="35dp"
                    android:lineSpacingExtra="3dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="@string/BuyerProjectDetail_ProjectCatItem" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/budget_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="18dp"
                        android:lineSpacingExtra="3dp"
                        android:text="@string/BuyerProjectDetail_ProjectBudgetTitle"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="38dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:text="@string/BuyerProjectDetail_ProjectBudgetUnit" />

                <TextView
                    android:id="@+id/jobPrice"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="63dp"
                    android:textAlignment="textStart"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="@string/SellerSerDetail_SerPriceItem" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/duration_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="13dp"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="@string/BuyerProjectDetail_ProjectDeliveryTitle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/jobDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginLeft="36dp"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="@string/BuyerProjectDetail_ProjectDeliveryDays" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="@string/BuyerProjectDetail_ProjectDeliveryDaysUnit" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/status_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="15dp"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="@string/BuyerProjectDetail_ProjectStatusTitle" />

                </LinearLayout>

                <TextView
                    android:id="@+id/PDetail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="35dp"
                    android:lineSpacingExtra="3dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:text="@string/BuyerProjectDetail_ProjectStatusDesc" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

        <LinearLayout
            android:id="@+id/linearProBtnBoth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/btn_projectEdit"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="@string/btn_edit"
                android:textSize="14dp"
                android:textStyle="bold"
                android:stateListAnimator="@null"
                app:cornerRadius="10dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.05"/>

            <Button
                android:id="@+id/btn_projectDelete"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:stateListAnimator="@null"
                android:text="@string/btn_delete"
                android:textStyle="bold"
                android:textSize="14dp"
                app:cornerRadius="10dp" />

        </LinearLayout>

</RelativeLayout>