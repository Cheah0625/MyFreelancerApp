<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankInformation"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue2">

            <ImageButton
                android:id="@+id/ListBackToSellerAcc"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:backgroundTint="@color/dark_blue2"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textSize="18dp" />

        </LinearLayout>

       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:outlineAmbientShadowColor="@color/grey"
            android:outlineSpotShadowColor="@color/grey"
            android:background="@color/light_grey3" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingStart="21dp"
            android:paddingEnd="21dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:text="@string/BankInfo_Title"
                android:textColor="@color/red"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jobCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/red"
                android:textSize="14dp"
                android:text="@string/BankInfo_Desc"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_addBankInfo"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                app:strokeColor="@android:color/transparent"
                android:backgroundTint="@color/light_grey4"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/icon_addBank"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/acc_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/btn_addBankInfo"
                android:layout_toEndOf="@+id/icon_addBank"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="355dp"
                android:layout_marginEnd="23dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_next" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_manageBankAcc"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                app:strokeColor="@android:color/transparent"
                android:backgroundTint="@color/light_grey4"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/icon_editBank"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/acc_bank_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/btn_manageBankInfo"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/icon_editBank"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="351dp"
                android:layout_marginEnd="23dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_next" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>